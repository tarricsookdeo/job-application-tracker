<div class="container">
<% if flash[:error] %>
    <div class="row" id="alert_box">
        <div class="col s12 m12">
            <div class="card red darken-1">
            <div class="row">
                <div class="col s12 m10">
                <div class="card-content white-text">
                <% flash[:error].each do |msg| %>
                    <p><%= msg %></p>
                <% end %>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
<% end %>
</div>