<div class="container">
    <h4>Your Job Applications</h4>
    <%= link_to "Add Application +", new_job_application_path, class: "btn blue darken-1" %>
    <table class="striped responsive-table centered">
        <thead>
          <tr>
              <th>Company</th>
              <th>Status</th>
              <th>Position</th>
              <th>Details / Edit</th>
          </tr>
        </thead>

        <tbody>
        <% @applications.each do |application| %>
          <tr>
            <td><%= application.company.name %></td>
            <td><%= application.status %></td>
            <td><%= application.position %></td>
            <td><%= link_to "Details / Edit", job_application_path(application) %></td>
          </tr>
        <% end %>
        </tbody>
    </table>
</div>